<Window x:Class="Czolgi.View.Instructions"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Czolgi.View"
        mc:Ignorable="d"
        Title="Instructions" Height="300" Width="300" WindowStyle="None" WindowState="Maximized">
    <Grid Name="GridName" Background="Black">
       
            <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"></ColumnDefinition>
            <ColumnDefinition Width="3*"></ColumnDefinition>
            <ColumnDefinition Width="1*"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Image x:Name="ImageArrow" Cursor="Hand" MouseUp="ImageArrow_OnMouseUp"  Source="/Czolgi;component/Resources/arrows.png"  HorizontalAlignment="Left" Height="100" Margin="10,192,0,0" VerticalAlignment="Bottom" Width="100"/>
        <TextBlock Grid.Column="1" x:Name="textBlock" Margin="0,30,0,0" TextWrapping="WrapWithOverflow" Text="TextBlock" VerticalAlignment="Top" Foreground="#FF93B096" FontSize="29.333"/>
    </Grid>
</Window>
